<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">


    <bean id = "userRepository" class="com.eleks.repository.UserRepositoryImpl">

    </bean>

    <bean id = "userValidator" class="com.eleks.validator.UserValidator">
        <property name="userRepository" ref="userRepository"/>
    </bean>

    <bean id = "loginServlet" class="com.eleks.controller.LogInServlet">
        <!--<property name="userRepository" ref="userRepository"/>-->
        <!--<property name="userValidator" ref="userValidator"/>-->
    </bean>


    <bean id = "userServlet" class="com.eleks.controller.UserServlet">
        <property name="userRepository" ref="userRepository"/>
    </bean>


    <bean id = "registerServlet" class="com.eleks.controller.RegisterServlet">
        <property name="userRepository" ref="userRepository"/>
    </bean>

</beans>